//定数
#define SYNNUM 17  //文法の数
#define WORDNUM 20 //単語数


//グローバル変数
//GLOBAL_DEFINEが定義されていれば
#ifdef GLOBAL_DEFINE
//GLOBALは空白
#define GLOBAL
//定義されていなければ
#else
//GLOBALはexternに変化
#define GLOBAL extern
#endif
//これにより多重定義を回避

GLOBAL char questr[WORDNUM][10]; //問題文が単語ごとに格納 [単語数][文字数]
GLOBAL char questrpos[WORDNUM][10]; //問題文の単語の品詞を格納

GLOBAL char dict[WORDNUM][2][10]; //辞書が格納 [単語数][][文字数]
GLOBAL char syn[SYNNUM][2][10]; //文法が格納

GLOBAL char currentpos[10]; //品詞の現在の状態

GLOBAL int quenum; //問題の単語数を格納


//プロトタイプ宣言
//ini.c
void inimain(char dictname[], char filename[]);
void arrayini(char array[][2][10],  char filename[]);
int queini(char filename[]);
void currentini();

//ana.c
void possearch();
int synbool(int next);
void disp(int cur);
void analize();
